@model Grand.Web.Areas.Admin.Models.PointSetting.PointSettingModel

@Html.ValidationSummary(false)
@*@Html.HiddenFor(model => model.Id)*@
<script>
    $('body').addClass('page-sidebar-closed');
    $('.page-sidebar-menu').addClass('page-sidebar-menu-closed');
    var tabPos = 'left';
    if (window.devicePixelRatio == 2)
        tabPos = 'top';
    $(document).ready(function () {
        $('#service-edit').show();
        $("#service-edit").kendoTabStrip({
            animation: {
                open: {
                    effects: "fadeIn"
                }
            },
            tabPosition: tabPos,
            select: tabstrip_on_tab_select
        });
    });
</script>
<div id="service-edit" style="display:none">
    <ul>
        <li tab-index="0">
            @T("Admin.PointSetting.PointSetting.Fields.Gift")
        </li>

        <li tab-index="1">
            @T("Admin.PointSetting.PointSetting.Fields.DateTime")
        </li>

    </ul>
    <div>
        <partial name="_Create.TabInfo" model="Model" />
    </div>

            <div>
                <partial name="_Create.Date.cshtml" model="Model" />
            </div>
        
</div>
@{
    //custom tabs
    var eventMessage = new AdminTabStripCreated(this.Html, "service-edit");
    EngineContext.Current.Resolve<IEventPublisher>().Publish(eventMessage);
    foreach (var eventBlock in eventMessage.BlocksToRender)
    {
        @eventBlock
    }
}
@*save selected tab index*@
