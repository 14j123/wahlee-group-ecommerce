@using Grand.Web.Areas.Admin.Models.FlashSales;

@model FlashSaleModel
@{
    //page title
    ViewBag.Title = T("Admin.Promotions.FlashSales.EditFlashSaleDetails").Text;
}
<form asp-controller="FlashSale" asp-action="Edit" method="post" id="flashSale-form">
    <antiforgery-token />

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-tags"></i>
                        @T("Admin.Promotions.FlashSales.EditFlashSaleDetails") - @Model.Name
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("Admin.Promotions.FlashSales.BackToList").Text, "List")</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @T("Admin.Common.SaveContinue") </button>
                            <span id="flashSale-delete" class="btn red"><i class="fa fa-trash-o"></i> @T("Admin.Common.Delete")</span>
                            <vc:admin-widget widget-zone="flashSale_details_buttons" additional-data="Model" />
                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    <partial name="_CreateOrUpdate" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>
@Html.DeleteConfirmation("flashSale-delete")