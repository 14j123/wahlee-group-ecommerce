@model RegisterResultModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Register").Text);

    //continue URL
    var qs = this.Context.Request.Query["ReturnUrl"];
    var continueUrl = "";
    if (!String.IsNullOrEmpty(qs) && Url.IsLocalUrl(qs))
    {
        continueUrl = qs;
    }
    else
    {
        continueUrl = Url.RouteUrl("HomePage");
    }
}
<div class="page registration-result-page text-xs-center">
    <div class="purplewindow">
        <h1 class="generalTitle">@T("Account.Register")</h1>
        <section class="result windowtextcenter">
            @*@Model.Result*@
            <h10>An activation email has been send to you</h10>

            <h10>Activate to enjoy shopping without any haste</h10>
        </section>

        <input type="button" class="btn PayButton col-5" onclick="location.href='@continueUrl'" value="@T("Account.Register.Result.Continue")">
    </div>
    <div>
        @*class="btn-group generalMarginSupporter"*@
        
    </div>
    
</div>


@*btn-secondary register-continue-button*@
